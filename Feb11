DECLARE @json NVARCHAR(4000)
SET @json = 
N'{
    "info": {
        "type": 1,
        "address": {
            "town": "Bristol",
            "county": "Avon",
            "country": "England"
        },
        "tags": ["Sport", "Water polo"]
    },
    "type": "Basic"
}'


SELECT  
  JSON_VALUE(@json, '$.type') AS type,  
  JSON_VALUE(@json, '$.info.address.town') AS town,  
  JSON_QUERY(@json, '$.info.tags') AS tags;
